{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}

	<div class="site-section bg-image overlay" id="contact-section">
		<div class="container">
			<div class="row">
				<div class="col-12 text-center mb-5">
					<h2 class="text-black section-title text-uppercase">Nous contacter</h2>
				</div>
			</div>

			<div class="row justify-content-center text-black">
				<div class="col-lg-6 mb-5 ">
					{{ form_start(form) }}
					 <div class="form-group row">               
						<div class="col-md-6 mb-4 mb-lg-0">{{ form_row(form.name) }}</div>
                </div>
                <div class="form-group row">
						<div class="col-md-12">{{ form_row(form.email)}}</div>
                </div> 
						<div class="col-sm">{{ form_row(form.service)}}</div>
					</div>
					{{ form_end(form) }}

				</div>
			</div>
		</div>
	</div>

{% endblock %}
