{# {% extends 'base.html.twig' %} #}

{% block title %}{% endblock %}

{% block body %}
<div>
      {# {{ form_start(form) }} #}
      <form>
            <input type='search' name="search" placeholder='Recherche ...'/>
            <button type='submit'>Rechercher</button>
      {# {{ form_end(form) }} #}
      </form>
</div>      

<table>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.slug }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.image }}</td>
                <td>{{ post.isPublished ? 'Yes' : 'No' }}</td>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_post_blog_show', {'post': post.id}) }}">Voir</a>
                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
</table>        

{% endblock %}
